<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, label: false, placeholder: "Title" %>
  <%= f.input :url, as: :url, label: false, placeholder: "URL" %>
  <div>or</div>
  <%= f.input :content, as: :text, label: false, placeholder: "Description" %>

  <%= f.button :submit %>
<% end %>
